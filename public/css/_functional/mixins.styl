$color-white = #fff
$color-black = #333
$color-primary = #cd3e70

// MIXINS
$comfortaa()
  font-family 'Comfortaa', cursive

$raleway()
  font-family 'Raleway', 'Helvetica Neue', 'Arial', sans-serif

$rem(value)
  font-size value
  font-size $remify(value)

$remify(value)
  u = unit(value)

  if (u is 'px')
    return unit(value/16, 'rem')
  else
    return unit(value, u)
